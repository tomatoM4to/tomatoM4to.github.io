{
  "name": "blog",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --tsconfig tsconfig.server.json server/server.ts",
    "build:client": "vite build --outDir dist",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "build:ssr": "npm run build:client && npm run build:server",
    "build:ssg": "npm run build:ssr && tsx --tsconfig tsconfig.server.json server/gen-static.ts",
    "build:api": "tsx --tsconfig tsconfig.server.json server/gen-api-resource.ts",
    "build": "npm run build:ssg && npm run build:api",
    "start:ssr": "cross-env NODE_ENV=production tsx watch --tsconfig tsconfig.server.json server/server.ts",
    "start:ssg": "serve dist"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "express": "^5.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "react-router": "^7.9.4",
    "sirv": "^3.0.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "cross-env": "^10.0.0",
    "gray-matter": "^4.0.3",
    "serve": "^14.2.5",
    "tsx": "^4.20.6",
    "typescript": "~5.9.2",
    "vite": "^7.1.5",
    "vite-plugin-devtools-json": "^1.0.0"
  }
}
